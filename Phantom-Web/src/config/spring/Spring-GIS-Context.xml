<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop" 
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:jpa="http://www.springframework.org/schema/data/jpa"
	xsi:schemaLocation=" 
      http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
      http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd
      http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.3.xsd
	  http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa-1.8.xsd"
      >

	<!-- <context:annotation-config /> -->
	<context:component-scan base-package="Phantom.Web" >
        
    </context:component-scan> 
	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="ignoreUnresolvablePlaceholders" value="true" />
		<property name="locations">
			<list>
				<value>classpath:config/datasource/postgresql.properties</value>
				<!-- <value>classpath:config/datasource/postgis.properties</value> -->
			</list>
		</property>
	</bean>
	<bean id="DataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource"
		destroy-method="close">
		<property name="driverClass" value="org.postgresql.Driver" />
		<property name="jdbcUrl" value="jdbc:postgresql://localhost:5432/Phantom" />
		<property name="user" value="postgres" />
		<property name="password" value="postgres" />
	</bean>
	
	<bean id="entityManagerFactory"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
		<property name="dataSource" ref="DataSource" />
		<property name="jpaVendorAdapter" ref="PostgreSQLAdapter" />
		<property name="packagesToScan" value="Phantom.Web.Model" /><!--待扫描的实体类包，不再需要persistence.xml了 -->
		<property name="jpaProperties">
			<props>
				<prop key="hibernate.ejb.naming_strategy">org.hibernate.cfg.ImprovedNamingStrategy</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
			</props>
		</property>
	</bean>
	
	<!--指定实现JPA的适配器 -->
	<bean id="PostgreSQLAdapter"
		class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
		<property name="databasePlatform" value="org.hibernate.dialect.PostgreSQLDialect" />
	</bean>
	
    <!-- 配置事务管理器 -->
    <bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="entityManagerFactory"/>
    </bean>
 	
 	<!-- 启用 annotation事务注解-->
    <tx:annotation-driven transaction-manager="transactionManager"/> 
        
	<jpa:repositories base-package="Phantom.Web.Dao" entity-manager-factory-ref="entityManagerFactory"  transaction-manager-ref="transactionManager" />
	
	
	
	<bean id="GisDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource"
		destroy-method="close">
		<property name="driverClass" value="org.postgresql.Driver" />
		<property name="jdbcUrl" value="jdbc:postgresql://localhost:5432/PhantomGIS" />
		<property name="user" value="postgres" />
		<property name="password" value="postgres" />
	</bean>
	<bean id="GisEntityManagerFactory"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
		<property name="dataSource" ref="GisDataSource" />
		<property name="jpaVendorAdapter" ref="GisHibernateJpaVendorAdapter" />
		<property name="packagesToScan" value="Phantom.Web.Gis.Entity" />
		<property name="jpaProperties">
			<props>
				<prop key="hibernate.ejb.naming_strategy">org.hibernate.cfg.ImprovedNamingStrategy</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
			</props>
		</property>
	</bean>
	<bean id="GisHibernateJpaVendorAdapter"
		class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
		<property name="databasePlatform" value="org.hibernate.spatial.dialect.postgis.PostgisDialect" />
	</bean>

    <bean id="GisTransactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="GisEntityManagerFactory"/>
    </bean>
 	
    <tx:annotation-driven transaction-manager="GISTransactionManager"/> 

 	<jpa:repositories base-package="Phantom.Web.Gis.Dao" entity-manager-factory-ref="GisEntityManagerFactory"  transaction-manager-ref="GisTransactionManager" />
</beans>